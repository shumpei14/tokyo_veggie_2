<div class="container py-5 my-5">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 post_image_form">
			<figure class="figure">
			<%= form_for(@post, url: posts_path) do |f| %>
				<%= attachment_image_tag @post, :shop_image, format: 'jpeg', :size =>'420x370' %>
				<%= f.attachment_field :shop_image %>
	    </div>
			</figure>
			<div class="col-xs-8 offset-5">
				<%= f.text_field :user_name, placeholder: "name",autofocus: true %>
			</div>
			<div class="col-xs-8 offset-5 py-4">
				<%= f.text_field :shop_name, placeholder:"ショップ名" %>
				<span class="fa fa-building form-control-icon" aria-hidden="true"></span>
			</div>
			<!-- <div class="col-xs-8 offset-5 py-4">
			 <%= f.label :shop_address, placeholder:"address" %>
		    </div> -->
		    <div class="col-xs-8 offset-5 py-4">
			  <%= f.text_field :shop_address, placeholder: "東京都＊＊区"  %>
			</div>
			<%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメントここに" %>
		<hr>
		<%= f.submit "送信", class: "btn btn-primary col-xs-2 col-xs-offset-4"  %>
		<% end %>
	</div>
</div>
