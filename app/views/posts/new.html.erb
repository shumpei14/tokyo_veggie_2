		<%= form_for(@post, url: posts_path) do |f| %>
		<div class="row">
			<div class="col-sm-12">
				<%= attachment_image_tag @post, :shop_image, format: 'jpeg', size: "100x100" %>
				<%= f.attachment_field :shop_image %>
				<!-- <p><%= f.check_box :remove_shop_image %>画像を削除する</p> -->
			</div>
		</div>

		<div class="container-fluid">
			<div class="row">
				<br>
				<div class="form-group row">
							<%= f.text_field :user_name, placeholder: "name",autofocus: true,  class: "col-xs-2 col-xs-offset-3" %>
				</div>
					<%= f.text_field :shop_name, placeholder:"ショップ名", class: "col-xs-2 col-xs-offset-3" %>
					<span class="fa fa-building form-control-icon" aria-hidden="true"></span>
				</div>
				<div class="form-group row">
					<%= f.label :shop_address, placeholder:"address" %>
					<%= f.text_field :shop_address, placeholder: "東京都＊＊区",  class: "col-xs-2 col-xs-offset-3"  %>
				</div>
			</div>
			<div class="form-group row">
				<%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメントここに",  class: "col-xs-2 col-xs-offset-3" %>
			</div>
		</div>
		<hr>
		<%= f.submit "送信", class: "btn btn-primary col-xs-2 col-xs-offset-4"  %>
		<% end %>
